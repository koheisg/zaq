<% content_for :breadcrumb do %>
  <nav class="flex items-center text-sm leading-5 font-medium">
    <%= link_to t('service_name'), root_path, class: "text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out" %>
    <svg class="flex-shrink-0 mx-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
    </svg>
    <%= link_to @user.name, @user, class: 'text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out' %>
  </nav>
<% end %>


<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
  <div class="-ml-4 -mt-4 flex justify-between items-center flex-wrap sm:flex-no-wrap">
    <div class="ml-4 mt-4">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <%= image_tag @user.icon, class: 'h-12 w-12 rounded-full', alt: @user.name %>
        </div>
        <div class="ml-4">
          <h3 class="text-lg leading-6 font-medium text-gray-900"><%= @user.name %></h3>
          <p class="text-sm leading-5 text-gray-500">
            <%= link_to "@#{@user.name}", @user %>
          </p>
        </div>
      </div>
    </div>
    <div class="ml-4 mt-4 flex-shrink-0 flex">
      <span class="inline-flex rounded-md shadow-sm">
        <%= link_to "https://twitter.com/#{@user.name}", target: "_blank", rel: "noopener", class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-50 active:text-gray-800' do %>
          <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M17.316 6.246c.008.162.011.326.011.488 0 4.99-3.797 10.742-10.74 10.742-2.133 0-4.116-.625-5.787-1.697a7.577 7.577 0 0 0 5.588-1.562 3.779 3.779 0 0 1-3.526-2.621 3.858 3.858 0 0 0 1.705-.065 3.779 3.779 0 0 1-3.028-3.703v-.047a3.766 3.766 0 0 0 1.71.473 3.775 3.775 0 0 1-1.168-5.041 10.716 10.716 0 0 0 7.781 3.945 3.813 3.813 0 0 1-.097-.861 3.773 3.773 0 0 1 3.774-3.773 3.77 3.77 0 0 1 2.756 1.191 7.602 7.602 0 0 0 2.397-.916 3.789 3.789 0 0 1-1.66 2.088 7.55 7.55 0 0 0 2.168-.594 7.623 7.623 0 0 1-1.884 1.953z"/>
          </svg>
          <span><%= "@#{@user.name}" %></span>
        <% end %>
      </span>
    </div>
  </div>
  <div class='flex mt-5'>
    <div class="p-1">
      <span class="p-1"><%= @user.questions.count %></span>
      <span class="p-1"><%= t('.questions') %></span>
    </div>
    <div class="p-1">
      <span class="p-1"><%= @user.answers.count %></span>
      <span class="p-1"><%= t('.answers') %></span>
    </div>
  </div>
</div>


<div class="border-b border-gray-200">
  <nav class="-mb-px flex">
    <%= link_to t('.questions'), user_questions_path(@user), class: 'w-1/2 py-4 px-1 text-center border-b-2 border-transparent font-medium text-sm leading-5 text-gray-500 hover:text-gray-700 hover:border-gray-300 focus:outline-none focus:text-gray-700 focus:border-gray-300', aria: {current: "page"} %>
    <%= link_to t('.answers'), user_answers_path(@user), class: 'w-1/2 py-4 px-1 text-center border-b-2 border-indigo-500 font-medium text-sm leading-5 text-indigo-600 focus:outline-none focus:text-indigo-800 focus:border-indigo-700', aria: {current: "page"} %>
  </nav>
</div>

<%= render partial: 'questions/answers/answer', collection: @user.answers %>
