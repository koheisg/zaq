<% content_for :title do %>
  <%= content_tag(:title, "#{t('.page_title')}｜#{t('service_name')}") %>
<% end %>

<% content_for :h1 do %>
  <%= t('.page_title') %>
<% end %>

<% content_for :breadcrumb do %>
  <%= breadcrumbs([{name: t('service_name'), path: root_path}, {name: t('.page_title'), path: questions_path}]) %>
  <nav class="flex items-center text-sm leading-5 font-medium">
    <%= link_to t('service_name'), root_path, class: "text-gray-500 hover:text-gray-700" %>
    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
    </svg>
    <%= link_to t('.page_title'), questions_path, class: "text-gray-500 hover:text-gray-700" %>
  </nav>
<% end %>

