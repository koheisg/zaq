<% content_for :title do %>
  <%= content_tag(:title, "#{@answer.content.to_plain_text}ï½œ#{t('service_name')}") %>
<% end %>

<% content_for :back do %>
  <%= link_to :back do %>
    <%= image_tag 'zondicons/arrow-left.svg', alt: t('back'), class: 'h-8 w-4 pr-1' %>
  <% end %>
<% end %>

<% content_for :h1 do %>
  <%= @answer.content.to_plain_text %>
<% end %>

<% content_for :breadcrumb do %>
  <nav class="flex items-center text-sm leading-5 font-medium">
    <%= link_to t('service_name'), root_path, class: "text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out" %>
    <svg class="flex-shrink-0 mx-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
    </svg>
    <%= link_to t('questions.index.page_title'), questions_path, class: "text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out" %>
    <svg class="flex-shrink-0 mx-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
    </svg>
    <%= link_to @question.title, @question, class: 'text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out' %>
    <svg class="flex-shrink-0 mx-2 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
    </svg>
    <%= link_to @answer.content.to_plain_text, [@question, @answer], class: 'text-gray-500 hover:text-gray-700 transition duration-150 ease-in-out' %>
  </nav>
<% end %>

<%= render @answer %>
<%= render 'questions/question', question: @question %>
